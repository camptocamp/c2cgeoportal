# Upgrade
UPGRADE_MAKE_FILE ?= $(INSTANCE_ID).mk
ifeq ($(OPERATING_SYSTEM), WINDOWS)
UPGRADE_ARGS ?= --windows
else
UPGRADE_ARGS ?=
endif

$(UPGRADE_MAKE_FILE):
	@echo "The file '$(UPGRADE_MAKE_FILE)' can't be found,"
	@echo "this probably mean that you Makefile isn't named '<instanceid>.mk'."
	@echo "To solve this you can rename your Makefile or add in your Makefile"
	@echo "`UPGRADE_MAKE_FILE = <your_makefile_name>`."
	exit 1

.PHONY: upgrade
upgrade: .build/requirements.timestamp project.yaml $(UPGRADE_MAKE_FILE)
	$(VENV_BIN)/pip install c2cgeoportal==${VERSION}
	$(VENV_BIN)/c2ctool upgrade $(UPGRADE_MAKE_FILE) ${UPGRADE_ARGS} ${VERSION}

.PHONY: upgrade1
upgrade1: .build/requirements.timestamp project.yaml $(UPGRADE_MAKE_FILE)
	$(VENV_BIN)/c2ctool upgrade $(UPGRADE_MAKE_FILE) ${UPGRADE_ARGS} ${VERSION} --step 1

.PHONY: upgrade2
upgrade2: .build/requirements.timestamp project.yaml alembic.ini alembic_static.ini $(UPGRADE_MAKE_FILE)
	$(VENV_BIN)/c2ctool upgrade $(UPGRADE_MAKE_FILE) ${UPGRADE_ARGS} --step 2

.PHONY: upgrade3
upgrade3: .build/requirements.timestamp project.yaml $(UPGRADE_MAKE_FILE)
	$(VENV_BIN)/c2ctool upgrade $(UPGRADE_MAKE_FILE) ${UPGRADE_ARGS} --step 3

.PHONY: upgrade4
upgrade4: .build/requirements.timestamp project.yaml $(UPGRADE_MAKE_FILE)
	$(VENV_BIN)/c2ctool upgrade $(UPGRADE_MAKE_FILE) ${UPGRADE_ARGS} --step 4

.PHONY: upgrade5
upgrade5: .build/requirements.timestamp project.yaml $(UPGRADE_MAKE_FILE)
	$(VENV_BIN)/c2ctool upgrade $(UPGRADE_MAKE_FILE) ${UPGRADE_ARGS} ${VERSION} --step 5

.PHONY: upgrade6
upgrade6: .build/requirements.timestamp project.yaml $(UPGRADE_MAKE_FILE)
	$(VENV_BIN)/c2ctool upgrade $(UPGRADE_MAKE_FILE) ${UPGRADE_ARGS} ${VERSION} --step 6

