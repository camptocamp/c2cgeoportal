root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 110
quote_type = single

[*.{js,css,yaml,yml,json,json5,html,md,yaml_tmpl,whitesource}]
indent_size = 2

[{Makefile,*.mk}]
indent_size = 4
indent_style = tab
