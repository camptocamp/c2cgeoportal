root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 110
quote_type = single

[*.{js,json}]
indent_size = 2

[*.{yaml,yaml_tmpl,yml}]
indent_size = 2
quote_props = as-needed

[{Makefile,*.mk}]
indent_style = tab
