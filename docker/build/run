#!/usr/bin/env python3

import json
import os
import sys
import stat
import subprocess
import urllib.parse


for env in ['GROUP_ID', 'USER_ID', 'USER_NAME']:
    if env not in os.environ:
        exit('The {} environment variable is required'.format(env))

args = sys.argv[1:]
if len(args) == 1 and args[0].startswith("%5B"):
    args = json.loads(urllib.parse.unquote(args[0]))

del_user = True
del_group = True
try:
    subprocess.check_call(['groupadd', '--gid=' + os.environ['GROUP_ID'], 'geomapfish'])
except subprocess.CalledProcessError:
    del_group = False

try:
    subprocess.check_call([
        'useradd',
        '--groups={},sudo'.format(os.stat('/var/run/docker.sock').st_gid)
        if os.path.exists('/var/run/docker.sock') else '--groups=sudo',
        '--shell=/bin/bash',
        '--uid=' + os.environ['USER_ID'],
        '--gid=' + os.environ['GROUP_ID'],
        os.environ['USER_NAME'],
    ])
except subprocess.CalledProcessError:
    del_user = False

# Needed wen we run in docker-compose
if not os.path.exists('/home/' + os.environ['USER_NAME']):
    os.mkdir('/home/' + os.environ['USER_NAME'])
    os.chown('/home/' + os.environ['USER_NAME'], int(os.environ['USER_ID']), int(os.environ['GROUP_ID']))

# Be able to write in the build directory
os.chmod(
    "/build",
    stat.S_IRUSR | stat.S_IWUSR | stat.S_IXUSR |
    stat.S_IRGRP | stat.S_IWGRP | stat.S_IXGRP |
    stat.S_IROTH | stat.S_IWOTH | stat.S_IXOTH
)

run_file_name = "/tmp/run"
with open(run_file_name, 'w') as run_file:
    run_file.write("""#!/usr/bin/env python3

import subprocess, os

{umask}

try:
    subprocess.check_call({args})
except subprocess.CalledProcessError as e:
    exit(e.returncode)
""".format(
        umask='os.umask(0o{})'.format(os.environ["UMASK"]) if "UMASK" in os.environ else "",
        args=repr(args)
    ))

os.chmod(
    run_file_name,
    stat.S_IRUSR | stat.S_IXUSR |
    stat.S_IRGRP | stat.S_IXGRP |
    stat.S_IROTH | stat.S_IXOTH
)

try:
    subprocess.check_call(["su", os.environ['USER_NAME'], "-c", run_file_name])
except subprocess.CalledProcessError as e:
    exit(e.returncode)
except KeyboardInterrupt:
    print("Interrupted...")
    exit(0)
finally:
    if del_user:
        subprocess.check_call(['userdel', os.environ['USER_NAME']])
    if del_group:
        subprocess.check_call(['groupdel', 'geomapfish'])
