#!/bin/bash -e

find /app/ -name '*.tmpl' -print | while read file
do
    echo "Evaluate: ${file}"
    envsubst < ${file} > ${file%.tmpl}
done

find /app/*_geoportal/static-ngeo/build/ -name '*.js' -print | while read file
do
    echo "Evaluate: ${file}"
    sed --in-place --expression="s#__ENTRY_POINT__#${VISIBLE_ENTRY_POINT}#g" "${file}"
done

exec "$@"
